        <url>scm:git:https://github.com/ericstiles/learn-mvn-release.git</url>
        <connection>scm:git:https://github.com/ericstiles/learn-mvn-release.git</connection>
        <developerConnection>scm:git:https://github.com/ericstiles/learn-mvn-release.gitn-mvn-release.git</developerConnection>
        <tag>1.0</tag>
    </scm>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.example</groupId>
    <artifactId>learn-mvn-release</artifactId>

    <version>1.0</version>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.3</version>
                <configuration>
                    <tagNameFormat>@{project.version}</tagNameFormat>
                    <checkModificationExcludes>
                        <checkModificationExclude>pom.xml</checkModificationExclude>
                    </checkModificationExcludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>